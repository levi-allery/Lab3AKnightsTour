import java.util.Scanner;

public class Driver {

    public Driver() {
        menu();
    }

    public static void main(String args[]) {
        Driver d = new Driver();

    }


    public void Tour(int start, Board board) {
        int x = (start-1)% board.size;
        int y = (start-1)/board.size;
        System.out.println("starting postions x :" + x);
        System.out.println("starting postions y :" + y);
        board.board[y][x] = 'K';
        board.print();
        board.move(x,y);
    }

    public void menu() {
        //Variables
        Scanner scn = new Scanner(System.in);
        int boardSize = 0;
        int startPosition = 0;
        System.out.println ("Enter board size: ");
        boardSize = scn.nextInt();
        System.out.println("Enter the beginning square (1 to 25): ");
        boolean done = false;
        if(done){//To make sure a number between 1 and 25 was entered
            if(scn.nextInt() < 1 || scn.nextInt() > 25){
                System.out.println("Please enter a number between 1 & 25 :");
            }else{
                done = true;
            }
        }
        startPosition = scn.nextInt();
        Board b = new Board(boardSize, startPosition);
        Tour(startPosition, b);
    }

}
